{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "types": [
      "vitest/globals"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@DOMTypes/*": [
        "./src/domain/@types/*"
      ],
      "@CORTypes/*": [
        "./src/core/@types/*"
      ],
      "@INFTypes/*": [
        "./src/infra/@types/*"
      ],
      "_DOM/*": [
        "./src/domain/*"
      ],
      "_COR/*": [
        "./src/core/*"
      ],
      "_INF/*": [
        "./src/infra/*"
      ],
      "_TEST/*": [
        "./src/__tests__/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}
